" vim: set filetype=vim :

set gui=all

set focuscontent

set hintchars=hjklasdfgyuiopqwertnmzxcvb

noremap h 3h
noremap j 3j
noremap k 3k
noremap l 3l

command! -nargs=* eow tabopen eow.alc.co.jp/search?q=<args>
nnoremap e :eow 

command! -nargs=* wikija tabopen ja.wikipedia.org/w/index.php?search=<args>
nnoremap wj :wikija 

command! -nargs=* wikien tabopen en.wikipedia.org/w/index.php?search=<args>
nnoremap we :wikien 

highlight Hint       z-index: 5000; font: bold 18px Courier, monospace; color: red; background: white;
highlight HintElem   color: gray;  background: cyan;
highlight HintActive color: black; background: lime;
