" vim: set filetype=vim :

set titlestring=Firefox

set toolbars=nomenu,tabs,navigation,nobookmarks,noaddons

set focuscontent

set hintchars=abcdefghijklmnopqrstuvwxyz

set ignorecase
set smartcase

set complete=sfl

nnoremap e :tabopen http://eow.alc.co.jp/search?q=
nnoremap b :bmarks!<Space>

nnoremap g<C-N> :tabmove +1<CR>
nnoremap g<C-P> :tabmove -1<CR>

nnoremap zz :zoom! 100<CR>
nnoremap za :zoom! 120<CR>
nnoremap zs :zoom! 150<CR>
nnoremap zd :zoom! 200<CR>

command! rc source ~/.vimperatorrc

highlight Hint font: bold 16px monospace; color: #009; background-color: #FF9; border: solid 1px #00C; border-radius: 8px; padding: 0px 2px; text-transform: uppercase;
highlight HintElem color: #009; background-color: #FF9;
highlight HintActive color: #900; background-color: #0FF;
