" vim: set filetype=vim :

set titlestring=Firefox

set toolbars=nomenu,tabs,navigation,nobookmarks,noaddons

set focuscontent

set hintchars=abcdefghijklmnopqrstuvwxyz

noremap h 3h
noremap j 3j
noremap k 3k
noremap l 3l

noremap g<C-N> :tabmove +1<CR>
noremap g<C-P> :tabmove -1<CR>

nnoremap zz :zoom! 100<CR>
nnoremap za :zoom! 120<CR>
nnoremap zs :zoom! 150<CR>
nnoremap zd :zoom! 200<CR>

command! rc source ~/.vimperatorrc

highlight Hint color: red; background: white; font: bold 100% Helvetica, sans-serif; text-transform: uppercase; padding: 0px 2px;
highlight HintElem color: black; background: cyan;
highlight HintActive color: black; background: lime;
