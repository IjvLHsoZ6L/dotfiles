" vim: set filetype=vim :

set titlestring=Firefox

set toolbars=nomenu,tabs,navigation,nobookmarks,noaddons

set focuscontent

set hintchars=abcdefghijklmnopqrstuvwxyz

set ignorecase

noremap h 3h
noremap j 3j
noremap k 3k
noremap l 3l

noremap g<C-N> :tabmove +1<CR>
noremap g<C-P> :tabmove -1<CR>

nnoremap zz :zoom! 100<CR>
nnoremap za :zoom! 125<CR>
nnoremap zs :zoom! 150<CR>
nnoremap zd :zoom! 200<CR>

command! rc source ~/.vimperatorrc

highlight Hint font-family: "Ubuntu Mono"; color: #00C; background: #FF9; border: solid 1px #00C; border-radius: 3px; padding: 0px 2px;
highlight HintElem background: none
highlight HintActive background: cyan
